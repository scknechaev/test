<div class="createUserForm" ng-controller="createUserController">
  hello
  <div style="margin-top: 50px">

    <form  ng-submit="editUser(userToEdit)" class="form-horizontal">
      <h1 style="text-align: center">Create New User</h1>
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <input ng-model="userToEdit.name" type="text" class="form-control" name="name"  placeholder="Name">
        </div>
      </div>    <div class="form-group">
      <label for="email" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <input ng-model="userToEdit.email"  type="email" class="form-control" name="email"  placeholder="email">
      </div>
    </div>
      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <input ng-model="userToEdit.password" type="password" class="form-control" name="password" placeholder="Password">
        </div>
      </div>

      <div class="form-group">
        <label for="role" class="col-sm-2 control-label">User Role</label>
        <div class="col-sm-10">
          <select ng-model="userToEdit.role" class="form-control" ng-options="r.type as r.name for r in roleTypes">
          </select>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Create User</button>
        </div>
      </div>
    </form>

  </div>
</div>
